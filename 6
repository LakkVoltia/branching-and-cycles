#include <iostream>

using namespace std;

int main() {
    string number;
        cin >> number; // Ввод числа в виде строки

            int sum = 0;
                for (char digit : number) {
                        sum += digit - '0'; // Преобразуем символ в число и добавляем к сумме
                            }

                                cout << sum << endl; // Вывод суммы цифр
                                    return 0;
                                    }
